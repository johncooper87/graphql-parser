{
  "compilerOptions": {
    "experimentalDecorators": true,
    "outDir": "./dist/",
    "noImplicitAny": false,
    "module": "commonjs",
    "target": "ES2019",
    "allowJs": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "moduleResolution": "node",
    "sourceMap": true,

    "lib": ["es2020", "es2019", "es2018"],

    "baseUrl": ".",
    "paths": {
      //"@lib/*": ["./src/lib/*"],
    }
  },
  "exclude": [
    "node_modules"
  ]

}